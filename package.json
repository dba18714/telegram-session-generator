{
  "name": "telegram-session-manager",
  "version": "1.0.0",
  "description": "A simple and secure tool to generate Telegram session strings for bot development",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "bin": {
    "telegram-session": "dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && npm run build:esm",
    "build:esm": "tsc --module es2020 --outDir dist/esm && node scripts/build-esm.js",
    "dev": "ts-node src/cli.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "release": "npm version patch && npm publish"
  },
  "keywords": [
    "telegram",
    "session",
    "bot",
    "authentication",
    "gramjs",
    "telegram-api",
    "nodejs",
    "typescript"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dba18714/telegram-session-manager.git"
  },
  "bugs": {
    "url": "https://github.com/dba18714/telegram-session-manager/issues"
  },
  "homepage": "https://github.com/dba18714/telegram-session-manager#readme",
  "dependencies": {
    "dotenv": "^17.2.2",
    "telegram": "^2.26.22"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
